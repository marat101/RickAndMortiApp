<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_inf"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/character_img"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:maxWidth="300dp"
        tools:src="@android:color/system_accent3_700"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/character_name"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="11111111111111111"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/character_status"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="2222222222222222"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/character_species"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="3333333333333333333333333"
        android:layout_marginStart="2dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/character_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        tools:text="444444444444444444444"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/character_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        tools:text="55555555555555555555"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/character_creation_date"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        tools:text="66666666666666666666666666"
        android:textSize="21sp" />
    </LinearLayout>
</LinearLayout>